{
    "name": "whatsapp-claude-agent",
    "version": "1.5.1",
    "description": "Bridge WhatsApp with Claude Code - interact with your files via WhatsApp messages",
    "author": "SÃ©bastien Dubois",
    "license": "MIT",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dsebastien/whatsapp-claude-agent.git"
    },
    "bugs": {
        "url": "https://github.com/dsebastien/whatsapp-claude-agent/issues"
    },
    "homepage": "https://github.com/dsebastien/whatsapp-claude-agent",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.1.0"
    },
    "bin": {
        "whatsapp-claude-agent": "./dist/cli.js"
    },
    "scripts": {
        "start": "bun dist/cli.js",
        "dev": "bun run src/index.ts",
        "build": "bun build src/index.ts --outfile dist/cli.js --target bun",
        "build:exe": "bun build src/index.ts --compile --minify --sourcemap --outfile dist/whatsapp-claude-agent",
        "build:exe:linux": "bun build src/index.ts --compile --minify --sourcemap --target=bun-linux-x64 --outfile dist/whatsapp-claude-agent-linux-x64",
        "build:exe:macos": "bun build src/index.ts --compile --minify --sourcemap --target=bun-darwin-arm64 --outfile dist/whatsapp-claude-agent-darwin-arm64",
        "build:exe:macos-x64": "bun build src/index.ts --compile --minify --sourcemap --target=bun-darwin-x64 --outfile dist/whatsapp-claude-agent-darwin-x64",
        "build:exe:windows": "bun build src/index.ts --compile --minify --sourcemap --target=bun-windows-x64 --outfile dist/whatsapp-claude-agent-windows-x64.exe",
        "build:all": "bun run build:exe:linux && bun run build:exe:macos && bun run build:exe:macos-x64 && bun run build:exe:windows",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch",
        "tscw": "bun run tsc:watch",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky",
        "commit": "cz",
        "cm": "cz",
        "commit:lint": "commitlint --edit",
        "release": "git tag -a"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        },
        "cz-customizable": {
            "config": ".cz-config.cjs"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.1.0",
        "@eslint/js": "^9.36.0",
        "@types/bun": "latest",
        "@types/node": "^24.10.2",
        "@types/qrcode": "1.5.6",
        "commitizen": "^4.3.1",
        "cz-customizable": "^7.5.1",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.5",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0"
    },
    "dependencies": {
        "@anthropic-ai/claude-agent-sdk": "^0.1.9",
        "@whiskeysockets/baileys": "^7.0.0-rc.9",
        "commander": "^14.0.2",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3",
        "qrcode": "1.5.4",
        "qrcode-terminal": "^0.12.0",
        "superheroes": "^4.0.0",
        "zod": "^4.1.13"
    }
}
